        <item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_side_corners</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_layout_side_corners</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_side_corners</item>
        <item name="boxBackgroundMode">outline</item>
